<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CroytoWallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>

        <!-- Secondary brand color. -->
      <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
     <item name="colorOnSecondary">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:colorPrimaryDark">@color/status_color</item>

        <!-- Customize your theme here. -->


      <!--  <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
-->
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black</item>
    </style>
    <style name="Theme.CroytoWallet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statusBarBackground">@color/status_color</item>
    </style>

    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="CustomCheckbox03" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/product_check</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">#707070</item>
        <item name="boxCornerRadiusBottomEnd">7dp</item>
        <item name="boxCornerRadiusBottomStart">7dp</item>
        <item name="boxCornerRadiusTopEnd">7dp</item>
        <item name="boxCornerRadiusTopStart">7dp</item>
        <item name="android:textColorHint">#707070</item>
        <item name="android:opacity">opaque</item>

    </style>

    <style name="OutlineBox1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/stoke_color</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="hintTextColor">#707070</item>
        <item name="boxCornerRadiusBottomEnd">7dp</item>
        <item name="boxCornerRadiusBottomStart">7dp</item>
        <item name="boxCornerRadiusTopEnd">7dp</item>
        <item name="boxCornerRadiusTopStart">7dp</item>
        <item name="android:textColorHint">#707070</item>
        <item name="android:opacity">opaque</item>

    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>




</resources>