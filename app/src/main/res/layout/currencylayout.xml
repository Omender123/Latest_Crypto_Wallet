<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp">


            <TextView
                android:id="@+id/Currency_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toStartOf="@+id/checkbox_passcode"
                android:layout_toEndOf="@+id/Image_cuurency"
                android:text="Bitcoin"
                android:fontFamily="@font/montserrat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/toolbar_text_color"
                android:textSize="16dp"
               android:textStyle="bold" />

            <ImageView
                android:id="@+id/Image_cuurency"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bitcoin_image" />

            <TextView
                android:id="@+id/Currency_Des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Currency_Title"
                android:layout_toStartOf="@+id/checkbox_passcode"
                android:layout_toLeftOf="@+id/checkbox"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/Image_cuurency"
                android:justificationMode="inter_word"
                android:fontFamily="@font/montserrat"
                android:textSize="11dp" />
            <CheckBox
                android:id="@+id/checkbox_passcode"
                style="@style/CustomCheckbox02"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="3dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>