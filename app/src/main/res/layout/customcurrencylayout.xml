<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp">


            <TextView
                android:id="@+id/currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toStartOf="@+id/radio"
                android:layout_toEndOf="@+id/Image_cuurency"
                android:text="Bitcoin"
                android:fontFamily="@font/montserrat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/toolbar_text_color"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Image_cuurency"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:background="@color/purple_500"
                 />

            <TextView
                android:id="@+id/CountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currency"
                android:layout_toStartOf="@+id/radio"
                android:layout_toLeftOf="@+id/radio"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/Image_cuurency"
                android:justificationMode="inter_word"
                android:text="BTC"
                android:textSize="11dp" />
            <!--<CheckBox
                android:id="@+id/checkbox_passcode"
                style="@style/CustomCheckbox02"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="3dp" />-->
            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
           <!--     <RadioButton
                    android:id="@+id/clickRadio"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
           -->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>