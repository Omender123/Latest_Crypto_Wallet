                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tt11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="8dp"
                            android:text="text"
                            android:textColor="#000"
